datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model FavoriteCarPark {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  carPark   CarPark? @relation(fields: [carParkId], references: [id])
  carParkId String?
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model CarPark {
  id                  String            @id @default(cuid())
  createdAt           DateTime          @default(now())
  updatedAt           DateTime          @updatedAt
  address             String?
  xCoord              Float?
  yCoord              Float?
  carParkType         String?
  typeOfParkingSystem String?
  shortTermParking    String?
  carParkDecks        Int?
  gantryHeight        Float?
  carParkBasement     Boolean?
  carParkNo           String?
  freeParking         String?
  nightParking        String?
  favoriteCarParks    FavoriteCarPark[]
}

model User {
  id               String            @id @default(cuid())
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  firstName        String?
  lastName         String?
  username         String            @unique
  email            String?           @unique
  password         String
  roles            Json
  favoriteCarParks FavoriteCarPark[]
}
